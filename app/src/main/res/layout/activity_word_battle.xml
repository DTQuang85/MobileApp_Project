<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_universe">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_glass_dark">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_white"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word Race"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvLearned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learned: 0"
            android:textColor="@color/text_white"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textColor="@color/star_gold"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textColor="@color/text_white"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/raceArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_above="@id/cardWordPanel"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvRaceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build words to boost your horse!"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_glass_dark"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/lanePlayer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_race_lane">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="FINISH"
                    android:textSize="10sp"
                    android:textColor="@color/text_white"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/horsePlayer"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_horse"
                    app:tint="@color/fun_green"/>
            </FrameLayout>

            <ProgressBar
                android:id="@+id/progressPlayer"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/fun_green"
                android:progressBackgroundTint="#2BFFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvAiName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comet"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/laneAi1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_race_lane">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="FINISH"
                    android:textSize="10sp"
                    android:textColor="@color/text_white"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/horseAi1"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_horse"
                    app:tint="@color/fun_blue"/>
            </FrameLayout>

            <ProgressBar
                android:id="@+id/progressAi1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/fun_blue"
                android:progressBackgroundTint="#2BFFFFFF"/>

            <TextView
                android:id="@+id/tvAiStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comet: ..."
                android:textColor="#B3FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvAiName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bolt"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/laneAi2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_race_lane">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="FINISH"
                    android:textSize="10sp"
                    android:textColor="@color/text_white"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/horseAi2"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_horse"
                    app:tint="@color/fun_purple"/>
            </FrameLayout>

            <ProgressBar
                android:id="@+id/progressAi2"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/fun_purple"
                android:progressBackgroundTint="#2BFFFFFF"/>

            <TextView
                android:id="@+id/tvAiStatus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bolt: ..."
                android:textColor="#B3FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvAiName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rocket"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/laneAi3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_race_lane">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="FINISH"
                    android:textSize="10sp"
                    android:textColor="@color/text_white"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/horseAi3"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_horse"
                    app:tint="@color/fun_orange"/>
            </FrameLayout>

            <ProgressBar
                android:id="@+id/progressAi3"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/fun_orange"
                android:progressBackgroundTint="#2BFFFFFF"/>

            <TextView
                android:id="@+id/tvAiStatus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rocket: ..."
                android:textColor="#B3FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWordPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/card_bg_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_glass_dark">

            <TextView
                android:id="@+id/tvCurrentWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word: ..."
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <GridLayout
                android:id="@+id/gridLetters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_card"
                android:padding="6dp"
                android:columnCount="4"
                android:alignmentMode="alignMargins"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnBoost"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Boost"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_primary"/>

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Clear"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_secondary"/>

                <Button
                    android:id="@+id/btnShuffle"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Shuffle"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_secondary"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/resultOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/background_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvResultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You win!"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvResultDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Great job!"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/btnRetry"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Retry"
                        android:textColor="@color/text_white"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_primary"/>

                    <Button
                        android:id="@+id/btnExit"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Exit"
                        android:textColor="@color/text_white"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_secondary"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</RelativeLayout>
