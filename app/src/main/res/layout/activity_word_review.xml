<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"/>

            <TextView
                android:id="@+id/tvReviewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Word Review"
                android:textColor="#FFD700"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="40dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvModeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review learned words"
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mastery"
                android:textColor="#FFD700"
                android:textSize="12sp"/>

            <ProgressBar
                android:id="@+id/progressMastery"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_xp"/>

            <TextView
                android:id="@+id/tvMasteryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 / 10"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

            <ProgressBar
                android:id="@+id/progressReview"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:progress="10"
                android:max="100"/>

            <TextView
                android:id="@+id/tvStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streak: 0"
                android:textColor="#FF6B6B"
                android:textSize="16sp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFlashcard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#1A1A2E">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/frontCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp">

                    <TextView
                        android:id="@+id/tvWordEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ"
                        android:textSize="80sp"/>

                    <TextView
                        android:id="@+id/tvWordEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apple"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_marginTop="24dp"/>

                    <TextView
                        android:id="@+id/tvPronunciation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ËˆÃ¦p.É™l/"
                        android:textColor="#AAAAAA"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvTapHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to reveal meaning"
                        android:textColor="#4ECDC4"
                        android:textSize="14sp"
                        android:layout_marginTop="24dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvWordVietnamese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quáº£ tÃ¡o"
                        android:textColor="#FFD700"
                        android:textSize="36sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvExample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I eat an apple every day."
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginTop="24dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvExampleVi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TÃ´i Äƒn má»™t quáº£ tÃ¡o má»—i ngÃ y."
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"/>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ratingButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnHard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="ðŸ˜“ Hard"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_answer_wrong"/>

            <Button
                android:id="@+id/btnGood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="ðŸ˜Š Good"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_answer_background"/>

            <Button
                android:id="@+id/btnEasy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="ðŸ¤© Easy"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_answer_correct"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#1A1A2E"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰"
                    android:textSize="64sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review Complete!"
                    android:textColor="#FFD700"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/tvReviewStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You reviewed 10 words today"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnFinish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Finish"
                    android:textColor="#000000"
                    android:background="@drawable/button_gold_background"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
