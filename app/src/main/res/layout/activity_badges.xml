<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_transparent_dark">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ† Huy hiá»‡u"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTotalStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ 0"
            android:textColor="@color/star_gold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_stat_badge"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"/>

        <TextView
            android:id="@+id/tvTotalBadges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ† 0/10"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_stat_badge"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBadges"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statsBar"
        android:padding="8dp"
        android:clipToPadding="false"/>
</RelativeLayout>

