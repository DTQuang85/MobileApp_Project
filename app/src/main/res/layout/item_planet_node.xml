<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#1A1A2E">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/nodeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tvNodeEmoji"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="ðŸ“š"
                    android:textSize="32sp"
                    android:gravity="center"
                    android:background="@drawable/circle_background"/>

                <TextView
                    android:id="@+id/tvCompleted"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|end"
                    android:text="âœ“"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/circle_green"
                    android:visibility="gone"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvNodeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn Words"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNodeNameVi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoc tu vung"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvNodeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEARN"
                    android:textColor="#4ECDC4"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜†â˜†â˜†"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLAY"
                    android:textColor="#FFD700"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_skip_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/lockOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’"
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/tvLockMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete previous node"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </FrameLayout>

        <View
            android:id="@+id/connectionLine"
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="-15dp"
            android:background="#33FFFFFF"
            android:visibility="gone"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>

