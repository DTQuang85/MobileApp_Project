<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_primary"
            android:padding="20dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@android:color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/btnBack"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tell me about yourself"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_difficulty_badge"
                        android:padding="6dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EASY"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/difficulty_easy"
                        android:background="@drawable/bg_difficulty_badge"
                        android:padding="6dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <!-- Explanation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_card"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to Answer (STAR Method)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use STAR method: Situation, Task, Action, Result"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.3"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Keywords Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_card"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key Points to Cover"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvKeywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="skills, experience, achievements, goals"
                    android:textSize="14sp"
                    android:textColor="@color/primary_blue"
                    android:textStyle="italic"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sample Answers -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Answers"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"/>

        <!-- Basic Sample -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_card"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Level"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/difficulty_easy"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvSampleBasic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sample basic answer..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.3"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Intermediate Sample -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_card"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediate Level"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/difficulty_medium"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvSampleIntermediate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sample intermediate answer..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.3"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Advanced Sample -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_card"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Level"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/difficulty_hard"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvSampleAdvanced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sample advanced answer..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.3"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Practice Button -->
        <Button
            android:id="@+id/btnPractice"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Practice"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_primary_selector"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

</ScrollView>
