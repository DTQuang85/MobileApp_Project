                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"/>

                    <TextView
                        android:id="@+id/tvEnemyLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 3"
                        android:textColor="#94A3B8"
                        android:textSize="15sp"
                        android:layout_marginBottom="18dp"/>

                    <!-- Health Bar with Better Styling -->
                    <com.example.engapp.view.HealthBarView
                        android:id="@+id/healthBarEnemy"
                        android:layout_width="260dp"
                        android:layout_height="22dp"
                        android:contentDescription="Enemy Health Bar"/>
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- ============================================
             ARENA ZONE - Battle Field with Depth
             ============================================ -->
        <androidx.cardview.widget.CardView
            android:id="@+id/arenaZoneCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#151A35"
            app:layout_constraintTop_toBottomOf="@id/cardEnemy"
            app:layout_constraintBottom_toTopOf="@id/commandPanel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.30">

            <FrameLayout
                android:id="@+id/arenaZone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Player vÃ  Buddy Container - áº¨n -->
                <LinearLayout
