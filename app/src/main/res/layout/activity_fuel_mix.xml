<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_universe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Pha nhiên liệu"
                android:textColor="@color/text_white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kéo nhiên liệu vào đúng buồng pha"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:alpha="0.9"/>

        <LinearLayout
            android:id="@+id/slotsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/slotRed"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_fuel_slot"
                    android:tag="red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Đỏ"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/slotBlue"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_fuel_slot"
                    android:tag="blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Xanh"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/slotYellow"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_fuel_slot"
                    android:tag="yellow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Vàng"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tokensRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tokenRed"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:text="R"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_fuel_red"
                android:tag="red"/>

            <TextView
                android:id="@+id/tokenBlue"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:text="B"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_fuel_blue"
                android:tag="blue"/>

            <TextView
                android:id="@+id/tokenYellow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Y"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_fuel_yellow"
                android:tag="yellow"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@color/text_white"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Làm lại"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:background="@drawable/bg_button_primary"/>
    </LinearLayout>
</FrameLayout>
