<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_universe">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_glass_dark">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_white"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŒˆ Coloria Prime"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <!-- Stats -->
        <TextView
            android:id="@+id/tvSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘£ 0"
            android:textColor="@color/text_white"
            android:textSize="12sp"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tvWordsFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š 0"
            android:textColor="@color/star_gold"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Energy Bar -->
    <LinearLayout
        android:id="@+id/energyBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ 100"
            android:textColor="@color/fun_yellow"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressEnergy"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:progressDrawable="@drawable/progress_energy"
            android:max="100"
            android:progress="100"/>
    </LinearLayout>

    <!-- Buddy Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBuddy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/energyBar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#4ECDC4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Buddy Avatar -->
            <TextView
                android:id="@+id/tvBuddyEmoji"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="ðŸ¤–"
                android:textSize="40sp"
                android:background="@drawable/bg_buddy_avatar"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvBuddyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Robo-Buddy"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvBuddyMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sáºµn sÃ ng khÃ¡m phÃ¡!"
                    android:textColor="@color/text_white"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:maxLines="3"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scene Container (for future animations) -->
    <LinearLayout
        android:id="@+id/sceneContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardBuddy"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- Event Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sceneContainer"
        android:layout_above="@id/bottomButtons"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:visibility="gone"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@drawable/bg_event_card">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:background="@drawable/bg_event_card">

                <!-- Event Emoji -->
                <TextView
                    android:id="@+id/tvEventEmoji"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:text="ðŸŒŸ"
                    android:textSize="50sp"
                    android:background="@drawable/bg_event_emoji"/>

                <!-- Event Title -->
                <TextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sá»± kiá»‡n báº¥t ngá»!"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <!-- Event Description -->
                <TextView
                    android:id="@+id/tvEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MÃ´ táº£ sá»± kiá»‡n..."
                    android:textColor="@color/text_white"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Event Choices -->
                <LinearLayout
                    android:id="@+id/eventChoices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/bg_glass_dark">

        <Button
            android:id="@+id/btnRest"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="ðŸ˜´ Nghá»‰ ngÆ¡i"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:background="@drawable/bg_button_rest"/>

        <Button
            android:id="@+id/btnExplore"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="ðŸš€ KhÃ¡m phÃ¡!"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_explore"/>
    </LinearLayout>
</RelativeLayout>

