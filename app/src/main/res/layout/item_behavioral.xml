<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Category and Difficulty -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Category Badge -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textSize="12sp"
                android:textColor="@color/text_white"
                android:background="@drawable/bg_button_primary"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textStyle="bold"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Difficulty Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_difficulty_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/ivDifficulty"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_difficulty_easy"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:textSize="12sp"
                    android:textColor="@color/difficulty_easy"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Question Text -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell me about yourself."
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp"/>

        <!-- Keywords count -->
        <TextView
            android:id="@+id/tvKeywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 key points to cover"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_practice"
            android:drawablePadding="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
