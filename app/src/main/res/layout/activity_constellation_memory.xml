<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_universe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Chòm sao ghi nhớ"
                android:textColor="@color/text_white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textColor="@color/star_gold"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Vòng 1"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Quan sát rồi chạm lại đúng thứ tự"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:alpha="0.9"/>

        <GridLayout
            android:id="@+id/gridStars"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <ImageView
                android:id="@+id/star0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_star_node"
                android:padding="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/text_white"/>

            <ImageView
                android:id="@+id/star1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_star_node"
                android:padding="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/text_white"/>

            <ImageView
                android:id="@+id/star2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_star_node"
                android:padding="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/text_white"/>

            <ImageView
                android:id="@+id/star3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_star_node"
                android:padding="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/text_white"/>

            <ImageView
                android:id="@+id/star4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_star_node"
                android:padding="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/text_white"/>

            <ImageView
                android:id="@+id/star5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_star_node"
                android:padding="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/text_white"/>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnReplay"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Xem lại"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:background="@drawable/bg_button_primary"/>

            <Button
                android:id="@+id/btnRestart"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Chơi lại"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:background="@drawable/bg_button_primary"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
