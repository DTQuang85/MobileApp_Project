<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_universe">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_glass_dark">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘¾ Boss Gate"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ¢u 1/5"
            android:textColor="@color/text_white"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Boss Health Bar -->
    <LinearLayout
        android:id="@+id/healthSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOSS"
                android:textColor="@color/wrong_red"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/progressBoss"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:progressDrawable="@drawable/progress_boss"
                android:max="100"
                android:progress="100"/>

            <TextView
                android:id="@+id/tvHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¤ï¸ 100%"
                android:textColor="@color/wrong_red"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Boss Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBoss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/healthSection"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#8B5CF6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Boss Avatar -->
            <TextView
                android:id="@+id/tvBossEmoji"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="ðŸ‘¾"
                android:textSize="64sp"
                android:background="@drawable/bg_boss_avatar"/>

            <TextView
                android:id="@+id/tvBossName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhiá»…u SÃ³ng Boss"
                android:textColor="@color/text_white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvBossMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grr! TÃ´i sáº½ cháº·n cá»•ng!"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Listen Button -->
    <Button
        android:id="@+id/btnListen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardBoss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="ðŸ”Š Nghe tá»«"
        android:textSize="18sp"
        android:background="@drawable/bg_listen_button_rect"
        android:padding="16dp"
        android:textColor="@color/text_white"/>

    <!-- Answer Options -->
    <LinearLayout
        android:id="@+id/optionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnListen"
        android:orientation="vertical"
        android:padding="16dp"/>
</RelativeLayout>

