        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Behavioral Questions"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingVertical="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_primary"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="All"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/chipEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_card"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Easy"
                android:textColor="#aaaaaa"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/chipMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_card"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Medium"
                android:textColor="#aaaaaa"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/chipHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Hard"
                android:textColor="#aaaaaa"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Questions RecyclerView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewQuestions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            android:clipToPadding="false" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="#00d4ff"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No questions found"
            android:textColor="#aaaaaa"
            android:textSize="16sp"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>

