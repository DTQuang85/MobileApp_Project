                <!-- Lightning Bolt Effect - ÄÃ£ bá» -->
                <com.example.engapp.view.LightningBoltView
                    android:id="@+id/lightningBolt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>

                <!-- Hit FX Overlays -->
                <View
                    android:id="@+id/hitFXOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

                <!-- Floating Damage Numbers -->
                <TextView
                    android:id="@+id/tvDamagePopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10"
                    android:textColor="#FFD93D"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="6"/>

                <!-- Combo Indicator -->
                <TextView
                    android:id="@+id/tvCombo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Combo x3"
                    android:textColor="#FFD93D"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="18dp"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- ============================================
             COMMAND PANEL - Premium Question & Answers
             ============================================ -->
        <androidx.cardview.widget.CardView
            android:id="@+id/commandPanel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#1A1F3A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_command_panel">

                <LinearLayout
