<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_universe">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_glass_dark">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ’¬ Há»™i thoáº¡i"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ 0"
            android:textColor="@color/star_gold"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Progress -->
    <LinearLayout
        android:id="@+id/progressSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:progressDrawable="@drawable/progress_planet"
            android:max="100"
            android:progress="0"/>

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/5"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- NPC Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardNpc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressSection"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#4ECDC4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- NPC Avatar -->
            <TextView
                android:id="@+id/tvNpcEmoji"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="ðŸ¤–"
                android:textSize="48sp"
                android:background="@drawable/bg_npc_avatar"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvNpcName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Robo-Guide"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNpcMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ChÃ o báº¡n! HÃ£y chá»n cÃ¢u tráº£ lá»i Ä‘Ãºng nhÃ©!"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Answer Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardNpc"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_bg">

            <TextView
                android:id="@+id/tvOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_bg">

            <TextView
                android:id="@+id/tvOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_bg">

            <TextView
                android:id="@+id/tvOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>

