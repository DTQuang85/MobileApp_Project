<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4A4A6A"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#6A6A8A"/>
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3A3A5A"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#5A5A7A"/>
        </shape>
    </item>
</selector>

