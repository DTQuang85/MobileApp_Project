<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp">

        <TextView
            android:id="@+id/tvSceneEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš€"
            android:textSize="80sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvSceneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Space Explorer!"
            android:textColor="#FFD700"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvSceneDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your adventure begins here..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAlignment="center"
            android:lineSpacingMultiplier="1.3"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/speechBubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#2A2A4A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvBuddyEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤–"
                    android:textSize="36sp"/>

                <TextView
                    android:id="@+id/tvBuddySpeech"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Hi! I am Cosmo, your space buddy!"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>

