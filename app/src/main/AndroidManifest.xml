<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.engapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="true"
        android:theme="@style/Theme.MyApplication">

        <!-- Splash Activity - App launcher with logo -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- Intro Activity - Welcome slides -->
        <activity 
            android:name=".IntroActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        
        <!-- Login Activity -->
        <activity android:name=".LoginActivity"/>
        
        <!-- SignUp Activity -->
        <activity android:name=".SignUpActivity"/>
        
        <!-- Main Activity - Bottom navigation host -->
        <activity android:name=".MainActivity"/>
        
        <!-- Category Activity - Chọn category -->
        <activity android:name=".CategoryActivity"/>
        
        <!-- Vocabulary Activity - Danh sách từ vựng theo category -->
        <activity android:name=".VocabularyActivity"/>
        
        <!-- Vocabulary Detail Activity - Chi tiết từ vựng -->
        <activity android:name=".VocabularyDetailActivity"/>
        
        <!-- Vocabulary Game Activity - Game nhìn từ chọn ảnh -->
        <activity android:name=".VocabularyGameActivity"/>
        
        <!-- Category Detail Activity - Tabs cho Vocabulary, Video, Game -->
        <activity android:name=".CategoryDetailActivity"/>
        
        <!-- Video List Activity - Danh sách video phỏng vấn -->
        <activity android:name=".VideoListActivity"/>
        
        <!-- Video Player Activity - Xem video YouTube trong app -->
        <activity 
            android:name=".VideoPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        
        <!-- Behavioral Interview Activities -->
        <activity android:name=".BehavioralListActivity"/>
        <activity android:name=".BehavioralDetailActivity"/>
        <activity 
            android:name=".BehavioralPracticeActivity"
            android:windowSoftInputMode="adjustResize"/>
    </application>
</manifest>
