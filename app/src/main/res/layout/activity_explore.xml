<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_universe">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_glass_dark">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”® Thu tháº­p Crystals"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvCrystals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’Ž 0"
            android:textColor="@color/star_gold"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Progress -->
    <LinearLayout
        android:id="@+id/progressSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progressDrawable="@drawable/progress_crystal"
            android:max="100"
            android:progress="0"/>

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="0/8"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Instruction -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressSection"
        android:text="Cháº¡m vÃ o cÃ¡c Word Crystal Ä‘á»ƒ thu tháº­p!"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="@drawable/bg_instruction"/>

    <!-- Crystal Grid -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInstruction"
        android:layout_above="@+id/bottomSpace"
        android:fillViewport="true">

        <GridLayout
            android:id="@+id/crystalGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:padding="24dp"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:layout_gravity="center"/>
    </ScrollView>

    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

