<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/planetContainer"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_planet_gradient">

        <!-- Lock Overlay -->
        <FrameLayout
            android:id="@+id/lockOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’"
                    android:textSize="48sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”‹"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvRequiredFuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/star_gold"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Fuel Cells"
                        android:textColor="@color/text_white"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Planet Emoji -->
        <TextView
            android:id="@+id/tvPlanetEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="ðŸŒˆ"
            android:textSize="56sp"/>

        <!-- Collectible Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_stat_pill"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/tvCollectibleEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’Ž"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvCollectibleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Planet Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_planet_info">

            <!-- Planet Name -->
            <TextView
                android:id="@+id/tvPlanetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coloria Prime"
                android:textColor="@color/text_white"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvPlanetNameVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HÃ nh tinh Sáº¯c MÃ u"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:alpha="0.9"/>

            <!-- Skill Focus -->
            <TextView
                android:id="@+id/tvSkillFocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“š Colors &amp; Shapes"
                android:textColor="@color/star_gold"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/progressPlanet"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_planet"
                    android:max="100"
                    android:progress="0"/>

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Stars -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvStar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="16sp"
                    android:alpha="0.3"/>

                <TextView
                    android:id="@+id/tvStar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="16sp"
                    android:alpha="0.3"
                    android:layout_marginStart="2dp"/>

                <TextView
                    android:id="@+id/tvStar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="16sp"
                    android:alpha="0.3"
                    android:layout_marginStart="2dp"/>

                <!-- Play Button -->
                <TextView
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  â–¶ ChÆ¡i"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/bg_play_button"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
