                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¤ï¸ 100/100"
                android:textColor="@color/correct_green"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>

            <ProgressBar
                android:id="@+id/progressPlayerHealth"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="80dp"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/progress_health_player"
                android:max="100"
                android:progress="100"/>
        </LinearLayout>

        <!-- VS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš”ï¸"
            android:textSize="32sp"/>

        <!-- Enemy Side -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvEnemyEmoji"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="ðŸ‘¾"
                android:textSize="36sp"
                android:background="@drawable/bg_enemy_avatar"/>

            <TextView
                android:id="@+id/tvEnemyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slime Lv.1"
                android:textColor="@color/text_white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvEnemyHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’€ 50/50"
                android:textColor="@color/wrong_red"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>

            <ProgressBar
                android:id="@+id/progressEnemyHealth"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="80dp"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/progress_health_enemy"
                android:max="100"
                android:progress="100"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Buddy Message -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBuddyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/battleArena"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#4ECDC4">

        <TextView
            android:id="@+id/tvBuddyMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sáºµn sÃ ng chiáº¿n Ä‘áº¥u! GhÃ©p chá»¯ thÃ nh tá»« Ä‘á»ƒ táº¥n cÃ´ng! ðŸ’ª"
            android:textColor="@color/text_white"
            android:textSize="13sp"
            android:padding="12dp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <!-- Word Building Area -->
    <LinearLayout
        android:id="@+id/wordArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardBuddyMessage"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <!-- Combo indicator -->
        <TextView
            android:id="@+id/tvCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/fun_yellow"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Current Word Display -->
        <LinearLayout
            android:id="@+id/wordDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvCurrentWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="@color/text_white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>
        </LinearLayout>

        <!-- Word Meaning -->
        <TextView
            android:id="@+id/tvWordMeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/fun_green"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Damage Preview -->
        <TextView
            android:id="@+id/tvDamagePreview"
            android:layout_width="wrap_content"
