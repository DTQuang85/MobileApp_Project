<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_primary"
            android:padding="20dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@android:color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practice Your Answer"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_toEndOf="@id/btnBack"
                android:layout_marginStart="16dp"/>

        </RelativeLayout>

        <!-- Question Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_card"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell me about yourself"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:padding="16dp"/>

        </androidx.cardview.widget.CardView>

        <!-- Mode Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnModeWrite"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Write"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_primary_selector"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_keyboard"
                android:drawablePadding="8dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnModeRecord"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Record"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:background="@drawable/bg_card"
                android:layout_marginStart="8dp"
                android:drawableStart="@drawable/ic_microphone"
                android:drawablePadding="8dp"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Write Mode -->
        <LinearLayout
            android:id="@+id/layoutWriteMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:visibility="visible">

            <EditText
                android:id="@+id/etAnswer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_input_field"
                android:hint="Type your answer using STAR method..."
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:padding="16dp"
                android:gravity="top|start"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="15"
                android:scrollbars="vertical"/>

        </LinearLayout>

        <!-- Record Mode -->
        <LinearLayout
            android:id="@+id/layoutRecordMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/background_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <ImageView
                        android:id="@+id/btnRecord"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_microphone"
                        android:tint="@color/primary_blue"
                        android:background="@drawable/bg_button_primary"
                        android:padding="20dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/tvRecordStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to start recording"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/tvRecordedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="12dp"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:visibility="gone"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Submit Answer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_primary_selector"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Score Card (Initially Hidden) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_card"
            android:layout_margin="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Score"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"/>

                <!-- Overall Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Overall Score"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tvOverallScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85/100"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_secondary"
                    android:alpha="0.2"
                    android:layout_marginVertical="8dp"/>

                <!-- Keyword Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Keyword Coverage"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvKeywordScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/6 keywords"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

                <!-- Grammar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Grammar"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvGrammar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good"
                        android:textSize="14sp"
                        android:textColor="@color/difficulty_easy"/>

                </LinearLayout>

                <!-- Structure -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="STAR Structure"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/tvStructure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete"
                        android:textSize="14sp"
                        android:textColor="@color/difficulty_easy"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
